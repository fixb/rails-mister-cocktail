<div class="banner-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 200, fetch_format: :auto, crop: :fill if @cocktail.photo.attached? %>')">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row d-flex align-items-center cool-2">
    <div class="col-sm-2">
      <img class="avatar-large" src="<%= cl_image_path @cocktail.photo.key if @cocktail.photo.attached? %>">
    </div>
    <div class="col-sm-12 col-md-6 d-flex justify-content-center cool"  >
      <%= link_to "Back to all cocktails", cocktails_path %>
      <br>
      <%= link_to "Add some ingredients", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h3>Recipe</h3>
      <div class="table-responsive-sm">
        <table class="table table-borderless">
          <tbody>
            <thead class="thead-dark">
              <th>Ingredient</th>
              <th>Dose</th>
              <th class="cool-4">Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td class="cool-3">
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash destroy_dose "></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
